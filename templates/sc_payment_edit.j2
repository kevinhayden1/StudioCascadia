{% block body %}

<h3>Payment Management</h3>
<h4>Edit Payment</h4>



<form>

    <div class="form-group row">
        <label for="inputSaleID" class="col-sm-2 col-form-label">Sale ID</label>
        <select id="saleid" name="saleid">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputSaleID" placeholder="Sale ID">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputDate" class="col-sm-2 col-form-label">Date</label>
        <div class="col-sm-10">
        <input type="date" class="form-control" id="inputDate" placeholder="XXXX-XX-XX XX:XX">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputCard" class="col-sm-2 col-form-label">Card</label>
        <select id="card" name="card">
            <option value="0">0</option>
            <option value="1">1</option>
        </select>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputCard" placeholder="Card">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputCash" class="col-sm-2 col-form-label">Cash</label>
        <select id="cars" name="cars">
            <option value="0">0</option>
            <option value="1">1</option>
        </select>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputCash" placeholder="cash">
        </div>
    </div>
    
    </br>
    <div class="form-group row">
        <label for="inputCheck" class="col-sm-2 col-form-label">Check</label>
        <select id="check" name="check">
            <option value="0">0</option>
            <option value="1">1</option>
        </select>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputCheck" placeholder="check">
        </div>
    </div>
    
    </br>


    <div class="form-group row">
        <label for="inputCardNumber" class="col-sm-2 col-form-label">Card Number</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputCardNumber" placeholder="Card Number">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputExpDate" class="col-sm-2 col-form-label">Expiration Date</label>
        <div class="col-sm-10">
        <input type="date" class="form-control" id="inputExpDate" placeholder="Expiration Date">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputAmount" class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputAmount" placeholder="Amount">
        </div>
    </div>
    
    </br>

