
<html>

{% block head %}

<link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">


{% endblock %}

{% block body %}

<div style="text-align: center;">
<div style="display: inline-block; text-align: left;">


<h3>Payment Management</h3>
<h4>Add Payment</h4>



<form id="insertPayment" action="/payment_add" method="post">

    <div class="form-group row">
        <label for="inputSaleID" class="col-sm-2 col-form-label">Sale ID</label>
        <select id="sale_id" name="sale_id">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
        </select>
        <div class="col-sm-10">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputDate" class="col-sm-2 col-form-label">Date</label><div class="col-sm-10">
        <input type="date" class="form-control" id="inputDate" name="date" placeholder="XXXX-XX-XX XX:XX">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputCard" class="col-sm-2 col-form-label">Card</label>
        <select id="card" name="card">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        <div class="col-sm-10">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputCash" class="col-sm-2 col-form-label">Cash</label>
        <select id="cash" name="cash">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        <div class="col-sm-10">
        </div>
    </div>
    
    </br>
    <div class="form-group row">
        <label for="inputCheck" class="col-sm-2 col-form-label">Check</label>
        <select id="check" name="check">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        <div class="col-sm-10">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputCardNumber" class="col-sm-2 col-form-label">Card Number</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputCardNumber" name="card_number" placeholder="Card Number">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputExpDate" class="col-sm-2 col-form-label">Expiration Date</label>
        <div class="col-sm-10">
        <input type="date" class="form-control" id="inputExpDate" name="exp_date" placeholder="Expiration Date">
        </div>
    </div>

    </br>

    <div class="form-group row">
        <label for="inputAmount" class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputAmount" name="amount" placeholder="Amount">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <div class="col-sm-10">
        <button type="submit"  name="add_payment" value="add_payment" class="btn btn-primary">Submit</button>
        </div>
    </div>

</form>

{% endblock %}

</div>
</div>

</html>
