<html>

{% block head %}

<link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">


{% endblock %}

{% block body %}

<div style="text-align: center;">
<div style="display: inline-block; text-align: left;">


<h3>Customer Management</h3>
<h4>Add a New Customer</h4>

<form id="insertCustomer" action"/customer_add" method="post">

    <div class="form-group row">
        <label for="inputLastName2" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="inputLastName2" name="last_name" placeholder="Last Name">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputFirstName2" class="col-sm-2 col-form-label">First name</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="inputFirstName2" name="first_name" placeholder="First Name">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputAddress2" class="col-sm-2 col-form-label">Address</label>
