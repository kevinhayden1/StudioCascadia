    <div class="form-group row">
        <label for="inputShipped" class="col-sm-2 col-form-label">Shipped</label>
        <div class="col-sm-10">
        <select>
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputDelivered" class="col-sm-2 col-form-label">Delivered</label>
        <div class="col-sm-10">
        <select>
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputCarrier" class="col-sm-2 col-form-label">Carrier</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="inputCarrier" placeholder="Carrier">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputTracking" class="col-sm-2 col-form-label">Tracking</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputTracking" placeholder="Tracking">
        </div>
    </div>
    
