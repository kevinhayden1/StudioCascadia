<html>

{% block head %}

<link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">


{% endblock %}

{% block body %}

<div style="text-align: center;">
<div style="display: inline-block; text-align: left;">


<h3>Shipment Management</h3>
<h4>Add a New Shipment</h4>

<form id="insertShipment" action="/shipment_add" method="post">

    <div class="form-group row">
        <label for="inputSaleID2" class="col-sm-2 col-form-label">Sale ID</label>
        <div class="col-sm-10">
        <select class="form-control" id="sale_id" name="sale_id" placeholder="" required> 
            <!-- Access our sales tuple passed from app.py-->
            <option value="0">&nbsp;</option>
            {% for sale in sales %}
                    <option value="{{ sale['id'] }}"> {{sale['id']}}</option> 
            <!-- End of this for loop -->
            {% endfor %} 
        </select>
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputShipped" class="col-sm-2 col-form-label">Shipped</label>
        <div class="col-sm-10">
        <select name="shipped">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputDelivered" class="col-sm-2 col-form-label">Delivered</label>
        <div class="col-sm-10">
        <select name="delivered">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputCarrier" class="col-sm-2 col-form-label">Carrier</label>
        <div class="col-sm-10">
        <input type="text" class="form-control" id="inputCarrier" name="carrier" placeholder="Carrier">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <label for="inputTracking" class="col-sm-2 col-form-label">Tracking</label>
        <div class="col-sm-10">
        <input type="number" class="form-control" id="inputTracking" name="tracking" placeholder="Tracking">
        </div>
    </div>
    
    </br>

    <div class="form-group row">
        <div class="col-sm-10">
        <button type="submit"  name="add_shipment" value="add_shipment" class="btn btn-primary">Submit</button>
        </div>
    </div>

</form>

{% endblock %}

</div>
</div>

</html>